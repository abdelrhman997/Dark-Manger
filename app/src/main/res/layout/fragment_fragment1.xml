            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:background="#fff"
            android:src="@drawable/baseline_play_arrow_24"
            android:text="Start" />

        <TextView
            android:id="@+id/startTimeTV"
